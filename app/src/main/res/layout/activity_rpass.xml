<?xml version="1.0" encoding="utf-8"?>
<!-- Para iniciar se define el tipo de contenedor en este caso LinearLayout
     que debe abrir con parentesis < triangular y cerrar con </ al final -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fadeScrollbars="false"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:text="Recuperar ContraseÃ±a"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/sena"
        android:textIsSelectable="false"
        android:textSize="30sp"
        app:emojiCompatEnabled="false" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="147dp"
        app:srcCompat="@drawable/logosena" />

    <EditText
        android:id="@+id/editTextText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:hint="@string/r_pass2" />

    <Button
        android:id="@+id/button2"
        color
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#39A900"
        android:hint="@string/recuperar"
        android:insetLeft="50dp"
        android:insetRight="50dp"
        android:text="Recuperar"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#F0F0F0" />

